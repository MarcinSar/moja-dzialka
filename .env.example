# =============================================================================
# moja-dzialka Environment Variables
# Copy to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED: API Keys
# -----------------------------------------------------------------------------

# Anthropic Claude API (required for agent)
ANTHROPIC_API_KEY=sk-ant-api03-...

# -----------------------------------------------------------------------------
# Database Passwords (change for production!)
# -----------------------------------------------------------------------------

POSTGRES_PASSWORD=change-me-in-production
NEO4J_PASSWORD=change-me-in-production

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Secret key for session signing (generate with: openssl rand -hex 32)
APP_SECRET_KEY=generate-a-random-32-byte-hex-string

# Debug mode (set to false in production)
DEBUG=false

# Persistence backend: memory | redis | redis_postgres
PERSISTENCE_BACKEND=redis_postgres

# CORS origins (comma-separated for multiple)
CORS_ORIGINS=["https://moja-dzialka.pl","https://www.moja-dzialka.pl"]

# -----------------------------------------------------------------------------
# Payments (Stripe) - Optional
# -----------------------------------------------------------------------------

STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_10=price_...
STRIPE_PRICE_ID_50=price_...

# -----------------------------------------------------------------------------
# Monitoring (Optional)
# -----------------------------------------------------------------------------

GRAFANA_PASSWORD=change-me

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# -----------------------------------------------------------------------------
# External Services (Optional)
# -----------------------------------------------------------------------------

# S3 for backups (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=moja-dzialka-backups

# Email notifications (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ADMIN_EMAIL=

# -----------------------------------------------------------------------------
# Internal (usually don't need to change)
# -----------------------------------------------------------------------------

# Redis
REDIS_URL=redis://redis:6379

# MongoDB
MONGODB_URI=mongodb://mongo:27017/moja_dzialka

# Milvus
MILVUS_HOST=milvus
MILVUS_PORT=19530

# Neo4j
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=moja_dzialka
POSTGRES_USER=app
