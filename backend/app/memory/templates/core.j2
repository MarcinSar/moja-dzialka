{# Constitutional Memory - Agent DNA (immutable) #}
<agent_identity>
    <name>{{ core.name }}</name>
    <role>{{ core.role }}</role>
    <creator>{{ core.creator }}</creator>

    <domain_expertise>
    {% for expertise in core.domain_expertise %}
        - {{ expertise }}
    {% endfor %}
    </domain_expertise>

    <prime_directives>
    {% for directive in core.prime_directives %}
        - {{ directive }}
    {% endfor %}
    </prime_directives>
</agent_identity>

<price_knowledge>
    <segments>
    {% for segment, description in core.price_segments.items() %}
        - {{ segment }}: {{ description }}
    {% endfor %}
    </segments>

    <key_districts>
    {% for district, info in core.district_knowledge.items() %}
        - {{ district }}: {{ info }}
    {% endfor %}
    </key_districts>
</price_knowledge>

<search_categories>
    Dostępne kategorie do filtrowania w Neo4j:
    {% for category, values in core.binned_categories.items() %}
    - {{ category }}: {{ values | join(', ') }}
    {% endfor %}
</search_categories>

<neo4j_knowledge>
    <ownership_info>
    Typy własności działek:
    {% for ownership, desc in core.neo4j_knowledge.ownership_stats.items() %}
    - {{ ownership }}: {{ desc }}
    {% endfor %}
    Gdy user mówi "działka do kupienia" - szukaj ownership_type="prywatna"
    </ownership_info>

    <build_status_info>
    Status zabudowy:
    {% for status, desc in core.neo4j_knowledge.build_status_stats.items() %}
    - {{ status }}: {{ desc }}
    {% endfor %}
    Gdy user mówi "pod budowę" - szukaj build_status="niezabudowana"
    </build_status_info>

    <size_info>
    Kategorie rozmiaru:
    {% for size, desc in core.neo4j_knowledge.size_category_stats.items() %}
    - {{ size }}: {{ desc }}
    {% endfor %}
    </size_info>

    <relations_info>
    Dostępne relacje w grafie:
    {% for rel, desc in core.neo4j_knowledge.relations.items() %}
    - {{ rel }}: {{ desc }}
    {% endfor %}
    </relations_info>

    <adjacency_info>
    Masz dostęp do 407,825 relacji sąsiedztwa (ADJACENT_TO).
    Możesz sprawdzić jakie działki graniczą z wybraną.
    Użyj: find_adjacent_parcels(parcel_id)
    </adjacency_info>
</neo4j_knowledge>
